<p id="notice"><%= notice %></p>

<h1>Предмети</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Предмет</th>
      <th>Години</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= subject.hour %></td>
        <td><%= link_to 'Показати', subject %></td>
        <td><%= link_to 'Редагувати', edit_subject_path(subject) %></td>
        <td><%= link_to 'Видалити', subject, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Додати предмет', new_subject_path %>
