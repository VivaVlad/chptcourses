<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
  <%= link_to "видалити", user, method: :delete,
                                  data: { confirm: "Ви впевнені?" } %>

<%=link_to "деактивувати", deactivate_user_path(user), method: :put,
data: { confirm: "Ви впевнені?"}%>
<%=link_to "активувати", activate_user_path(user), method: :put,
data: { confirm: "Ви впевнені?"}%>
  <% end %>
</li>
