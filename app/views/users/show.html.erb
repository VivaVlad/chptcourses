<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <% if current_user?(@user)%>
        <%= link_to 'налаштувати',  edit_user_path(@user) %>
        <%end%>
      </h1>
      <% if @user.activated? %>
              <p>активовано</p>
      <% else %>
              <p>не активовано</p>
      <% end %>
    </section>
  </aside>
</div>
