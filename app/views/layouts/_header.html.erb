<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Підготовчі курси", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Дім", root_path %></li>
        <li><%= link_to "Допомога", help_path %></li>
        <% if logged_in? %>
          <% if current_user.admin?%>
                  <li><%= link_to "Користувачі", users_path %></li>
          <% else %>
                  <li><%= link_to "Кабінет", user_path(current_user) %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Акаунт <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Профіль", current_user %></li>
              <li><%= link_to "Налаштування", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Вийти", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Увійти", login_path %></li>
          <li><%= link_to "Зареєструватись", signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
