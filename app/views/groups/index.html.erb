<p id="notice"><%= notice %></p>

<h1>Групи</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Назва групи</th>
      <th>Вчитель</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.teacher.name %></td>
        <td><%= link_to 'Показати', group %></td>
        <td><%= link_to 'Редагувати', edit_group_path(group) %></td>
        <td><%= link_to 'Видалити', group, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Створити групу', new_group_path %>
