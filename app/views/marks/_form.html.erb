  <% end %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= f.label :mark, "Оцінка" %>
    <%= f.number_field :mark, class: 'form-control' %>

    <%= f.label :student_id, "Студент" %>
    <%= f.text_field :student_id, class:"form-control" %>

    <%= f.label :subject_id, "Предмет" %>
