<% provide(:title, "Увійти") %>
<h1>Увійти</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', placeholder: "Ім'я"  %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', placeholder: "Пароль"  %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Запам'ятати мене</span>
      <% end %>

      <%= f.submit "Увійти", class: "btn btn-primary" %>
    <% end %>

    <p>Новий користувач?<%= link_to "Зареєструйтесь зараз!", signup_path %></p>
  </div>
</div>
