      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Ім'я"%>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :birthday, "День народження" %>
    <%= f.date_select :birthday %>
  </div>

  <div class="field">
    <%= f.label :education, "Навчальний заклад" %>
    <%= f.text_field :education %>
  </div>
<% if current_user.admin?%>
  <div class="field">
    <%= f.label :activated, "Активований"%>
    <%= f.check_box :activated %>
  </div>

  <div class="field">
    <%= f.label :group_id, "Група" %>
    <%= f.text_field :group_id %>
  </div>
<%end%>
  <div class="actions">
    <%= f.submit "Підтвердити", class: "btn btn-primary" %>
  </div>
<% end %>
