<p id="notice"><%= notice %></p>

<h1>Студенти</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Ім'я</th>
      <th>День народження</th>
      <th>Навчальний заклад</th>
      <th>Активований?</th>
      <th>Група</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.birthday %></td>
        <td><%= student.education %></td>
        <td><%= student.activated %></td>
        <td><%= student.group_id %></td>
        <td><%= link_to 'Показати', student %></td>
        <td><%= link_to 'Редагувати', edit_student_path(student) %></td>
        <td><%= link_to 'Видалити', student, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
